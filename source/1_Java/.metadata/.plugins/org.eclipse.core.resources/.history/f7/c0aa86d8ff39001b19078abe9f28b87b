package com.lec.ex05;

public abstract class TestMain implements IVolume {
	public static void main(String[] args) {
		Radio radio = new Radio ();
		TV tv = new TV(); //?
		IVolume vol[] = new IVolume[3];
		vol[1] = radio; //?
		vol[2] = tv; //?
		radio.volumeUp(10);
		tv.volumeUp(10);
		System.out.println("이제부터는 인터페이스를 이용한 호출입니다");
		for(int i=0; i<vol.length; i++)
			vol[i].volumeUp(10);
		for(IVolume v:vol)
			v.volumeUp();
	}
}
