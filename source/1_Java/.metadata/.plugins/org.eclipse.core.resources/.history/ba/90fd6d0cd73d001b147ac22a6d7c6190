package com.lec.ex2_date;

import java.text.SimpleDateFormat;
import java.util.GregorianCalendar;

import com.lec.ex1_string.Friend;

public class Ex07_birthDay {

	public static void main(String[] args) {
		Friend[]friends = {
				new Friend ("홍길동","010-9999-9999","12-14"),
				new Friend ("홍당무","010-9999-8888","01-01"),
				new Friend ("신길동","010-9999-7777","12-14")};
		//friends 배열에서 오늘이 생일 사람들의 목록 출력
		//오늘 생일인 사람이 없으며 없다고 출력
		//get이용   혹은  SimpleDateFormat이용
		//우선 오늘 날짜, -->for문 -->벌스데이랑equal한지, 아니면 계속 for문돌려 
	GregorianCalendar gc = new GregorianCalendar();
	SimpleDateFormat sdf =
			new SimpleDateFormat("M월 d일(E) a h시m분");
	System.out.println(sdf.format(gc.getTime()));

	}//main

}//class
